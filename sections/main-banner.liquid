
{%- if section.settings.image != blank -%}
    <section class="{{ section.id }} main-banner" style="background-image:url('{{ section.settings.image | img_url: 'master' }}')"​​​​​​​>
        {% else %}
    <section class="{{ section.id }} main-banner" style="background-image:url('{{ 'image_bg.jpg' | asset_url }}')"​​​​​​​>
{%- endif -%}

  <div class="container">
    <div class="content light">
      {% if template == 'index' %}
        <h1 class="primary"> {{ section.settings.title | escape }} </h1>
         {% else %}
          <h1 class="primary"> {{ section.settings.title | escape  }} </h1>
      {% endif %}
      
      <p> {{ section.settings.text | escape }} </p>
      {% if section.settings.button_choice %}
         <a href="{{ section.settings.link }}" class="btn prim-dark">{{ section.settings.button_text | escape }}</a>
      {% endif %}
     
    </div>
  </div>

  {% if section.settings.video_on%}
  <video class="main-banner_video" autoplay loop muted>
    <source src="{{ 'videoloop.mp4' | asset_url}}" type="video/mp4">
  </video>
  {% endif%}

</section>

{% schema %}
  {
    "name": "Top Banner",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Place Title Here"
      },
      {
        "id": "text",
        "type": "text",
        "label": "Description",
        "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown."
      },
            {
          "type": "header",
          "content": "Button"
        },

    {
        "type": "checkbox",
        "id": "button_choice",
        "label": "Want A Button?",
        "default": true
      },

       {
          "type": "text",
          "id": "button_text",
          "label": "Text",
          "default": "Read More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
                    {
          "type": "header",
          "content": "Background Image"
        },
            {

          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
    },
    {
      "type": "checkbox",
      "id": "video_on",
      "label": "Video Background",
      "default": false
    }
  ],
    "presets": [
    {
      "category": "Main",
      "name": "Main Banner",
      "settings": {}
    }
  ]
  }
{% endschema %}


<style>    

.main-banner_video{
  position: absolute;
    height: 100%;
    width: 100vw;
    object-fit: cover;
    z-index: -1;
}

.main-banner {
  width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: row;
    background-position-y: center;
    z-index: 1;
    padding: 12% 0;
}



.main-banner::after{
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: linear-gradient(90deg, rgb(0 0 0 / 94%) 0%, rgb(0 0 0 / 0%) 100%);
    z-index: -1;
}

.main-banner h1{
line-height: 30px;
}

.main-banner .content{
  width:55%;
  word-break: break-word;
}

.main-banner .content h1{
  font-size: 62px;
    line-height: 54px;
}

.main-banner .content h1::after{
  margin-top:30px;
}



@media screen and (max-width: 999px) {
  .main-banner .content{
    width:100%;
  }

  .main-banner .content h1{
  font-size: 54px;
    line-height: 54px;
}

}

@media screen and (max-width: 640px) {
  .main-banner{
    height:auto;
    padding:20% 0;
    background-position-x: center;

  }

  .main-banner::after{
    background:hsl(0deg 0% 0% / 80%);
  }

  .main-banner .content p, .main-banner .content h1,{
    line-height:45px;
  }

  .main-banner .content h1{
    font-size: 40px;
    line-height: 40px;
}

}
</style>