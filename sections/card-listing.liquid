          "info": "600 x 600px .jpg recommended"
        },
        {
          "type": "color",
          "id": "card-bg_color",
          "label": "Background Color"
        },
                {
          "type": "color",
          "id": "overlay-bg_color",
          "label": "Overlay Color"
        },
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "card-image",
          "label": "Card Image",
          "info": "100 x 100 .png recommended"
        },
        {
          "type": "header",
          "content": "Text"
        },
       {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Card"
        },
       {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Content goes here."
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
        "type": "checkbox",
        "id": "button_choice",
        "label": "Want A Button?",
        "default": true
      },
              {
        "type": "checkbox",
        "id": "red-btn_choice",
        "label": "Red Button",
        "default": false
      },

       {
          "type": "text",
