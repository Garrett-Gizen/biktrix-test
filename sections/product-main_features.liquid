<section class="section"   data-section-id="text-with-icons"  data-section-type="text-with-icons"  style="background-color: {{section.settings.bg_color}}; padding-bottom:0;">
  <div class="container">

    <div class="content content-full tc mbsep">
        {%- if section.settings.title_one != blank -%}
        <h1 class="primary center">{{ section.settings.title_one}}</h1>
        {%- endif -%}

      <div class="text-with-icons article-container">
        {% for block in section.blocks %}
        {% if block.settings.feature_range == 1%}
        <div class="article-card" data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
          <div class="article-item {% if block.settings.feature_button-switch %}article-btn{% endif %}">
          {%- if block.settings.feature_image -%}
          <div class="cover-image-panel" style="background-image:url('{{ block.settings.feature_image | img_url: 'master' }}')">
          {%- else -%}
          <div class="cover-image-panel" style="background-image:url('https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?format=jpg&quality=90&v=1530129081')">
          {%- endif -%}
          </div>
            <div class="article-content">
              <h2>{{block.settings.feature_title}}</h2>
              {{block.settings.feature_desc}}
            </div>
        </div>
        {%- if block.settings.feature_button-switch -%}
        <a href="{{block.settings.feature_button-link}}" class="btn btn-block tl btn-grey caret">{{block.settings.feature_button-text}}</a>
        {%- endif -%}
      </div>
      {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

  </div>
</section>

