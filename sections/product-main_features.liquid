{% schema %}
{
  "name": "Product Features",
  "settings": [
  {
    "type": "header",
    "content": "Titles"
  },
  {
    "type": "text",
    "id": "title_one",
    "label": "Header One"
  },
  {
    "type": "text",
    "id": "title_two",
    "label": "Header Two"
  },
  {
    "type": "text",
    "id": "title_three",
    "label": "Header Three"
  },
  {
    "type": "header",
    "content": "Background"
  },
  {
    "type": "color",
    "id": "bg_color",
    "label": "Background Color",
    "default": "#ffffff"
  }
  ],
    "blocks":[
    {
      "type": "select",
      "name": "Feature",
      "settings": 
      [
    {
        "type": "header",
        "content": "Image"
    },
      {
        "type": "image_picker",
        "id": "feature_image",
        "label": "Feature Image"
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "text",
        "id": "feature_title",
        "label": "Feature Title"
      },
      {
        "type": "richtext",
        "id": "feature_desc",
        "label": "Feature Description"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "checkbox",
        "id": "feature_button-switch",
        "default": false,
        "label": "Want A Button?"
      },
      {
        "type": "text",
        "id": "feature_button-text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "feature_button-link",
        "label": "Button Text"
      },
      {
        "type": "header",
        "content": "Placement"
      },
      {
        "type": "range",
        "id": "feature_range",
        "min": 1,
        "max": 3,
        "step": 1,
        "label": "Section",
        "default": 1
    }
      ]
    }
  ],

  "presets": [
    {
      "category": "Product",
      "name": "Product Features"
    }
  ]
}
{% endschema %}