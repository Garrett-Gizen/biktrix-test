<section class="section" data-section-id="text-with-icons"  data-section-type="text-with-icons"  style="background-color: {{block.settings.bg_color}}; padding-bottom:0;">
    <div class="container">
  
      <div class="content content-full tc content-features">
          {%- if block.settings.title != blank -%}
          <h1 class="primary center">{{ block.settings.title}}</h1>
          {%- endif -%}
  
        <div class="text-with-icons article-container">
  
          <div class="article-card" data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
            <div class="article-item {% if block.settings.feature_button-switch_1 %}article-btn{% endif %}">
            {%- if block.settings.feature_image_1 -%}
            <div class="cover-image-panel" style="background-image:url('{{ block.settings.feature_image_1 | img_url: 'master' }}')">
            {%- else -%}
            <div class="cover-image-panel" style="background-image:url('https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?format=jpg&quality=90&v=1530129081')">
            {%- endif -%}
            </div>
              <div class="article-content">
                <h2>{{block.settings.feature_title_1}}</h2>
                {{block.settings.feature_desc_1}}
              </div>
          </div>
          {%- if block.settings.feature_button-switch_1 -%}
          <a href="{{block.settings.feature_button-link_1}}" class="btn btn-block tl btn-grey caret">{{block.settings.feature_button-text_1}}</a>
          {%- endif -%}
        </div>

        <div class="article-card" data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
            <div class="article-item {% if block.settings.feature_button-switch_2 %}article-btn{% endif %}">
            {%- if block.settings.feature_image_2 -%}
            <div class="cover-image-panel" style="background-image:url('{{ block.settings.feature_image_2 | img_url: 'master' }}')">
            {%- else -%}
            <div class="cover-image-panel" style="background-image:url('https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?format=jpg&quality=90&v=1530129081')">
            {%- endif -%}
            </div>
              <div class="article-content">
                <h2>{{block.settings.feature_title_2}}</h2>
                {{block.settings.feature_desc_2}}
              </div>
          </div>
          {%- if block.settings.feature_button-switch_2 -%}
          <a href="{{block.settings.feature_button-link_2}}" class="btn btn-block tl btn-grey caret">{{block.settings.feature_button-text_2}}</a>
          {%- endif -%}
        </div>

        <div class="article-card" data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
            <div class="article-item {% if block.settings.feature_button-switch_3 %}article-btn{% endif %}">
            {%- if block.settings.feature_image_3 -%}
            <div class="cover-image-panel" style="background-image:url('{{ block.settings.feature_image_3 | img_url: 'master' }}')">
            {%- else -%}
            <div class="cover-image-panel" style="background-image:url('https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?format=jpg&quality=90&v=1530129081')">
            {%- endif -%}
            </div>
              <div class="article-content">
                <h2>{{block.settings.feature_title_3}}</h2>
                {{block.settings.feature_desc_3}}
              </div>
          </div>
          {%- if block.settings.feature_button-switch_3 -%}
          <a href="{{block.settings.feature_button-link_3}}" class="btn btn-block tl btn-grey caret">{{block.settings.feature_button-text_3}}</a>
          {%- endif -%}
        </div>

      </div>
  
    </div>
  </section>

