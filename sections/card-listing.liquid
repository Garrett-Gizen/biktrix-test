          "label": "Text",
          "default": "Read More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
            {
          "type": "header",
          "content": "Additional Settings"
        },
                {
        "type": "checkbox",
        "id": "height_choice",
        "label": "Full Height",
        "default": false
      },
       {
   "type": "range",
    "id": "col-height",
    "min": 1,
    "max": 6,
    "step": 1,
    "label": "Column Height",
    "default": 2
    }
      ]
    }
  ],
  "presets": [
    {
      "category": "Main",
      "name": "Card List"
    }
  ]
}
{% endschema %}
